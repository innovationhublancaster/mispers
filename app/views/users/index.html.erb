<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @users.each do |post| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= user.mobile %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(user.body).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", post_path(user) %>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
